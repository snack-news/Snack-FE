{
  "name": "snack-fe",
  "version": "0.0.1",
  "description": "Snack News FE",
  "main": "index.js",
  "scripts": {
    "init": "lerna bootstrap --hoist",
    "build": "lerna run --no-bail --parallel --scope @snack-fe/clinet --scope @snack-fe/server build",
    "build:watch": "lerna run --parallel --scope @snack-fe/clinet --scope @snack-fe/server build:watch",
    "start": "lerna run --parallel --scope @snack-fe/clinet --scope @snack-fe/server start",
    "start:dev": "lerna run --parallel --scope @snack-fe/clinet --scope @snack-fe/server start:dev",
    "test": "lerna run --no-bail --parallel --scope @snack-fe/clinet --scope @snack-fe/server test",
    "test:watch": "lerna run --parallel --scope @snack-fe/clinet --scope @snack-fe/server test:watch",
    "ts-compile-check": "lerna run --no-bail --parallel --scope @snack-fe/clinet --scope @snack-fe/server ts-compile-check"
  },
  "author": "",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "concurrently --kill-others-on-fail --success all \"npm run ts-compile-check\" \"lint-staged\""
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "jest --bail --findRelatedTests",
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.1.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.1",
    "eslint-config-vomvoru": "^1.0.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "react-test-renderer": "^16.8.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3333"
  }
}
