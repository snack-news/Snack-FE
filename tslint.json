{
  "extends": ["tslint-config-airbnb"],
  "env": {
    "browser": true
  },
  "linterOptions": {
    "exclude": ["*.js"]
  },
  "rules": {
    // This rule is here for now because of https://github.com/palantir/tslint-react/issues/120
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "ter-arrow-parens": [false],
    "import-name": [false]
  }
}
